<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body>
<script type="text/javascript">
	var x = parseInt(prompt('Nhập vào điểm bài kiểm tra(thang điểm 10):'));
	var y = parseInt(prompt('Nhập vào điểm thi giữa kỳ(thang điểm 10):'));
	var z = parseInt(prompt('Nhập vào điểm thi cuối kỳ(thang điểm 10):'));
	var a = (x+y+z)/3;
	if (a>=8) {
		alert('giỏi');
	}else if(5<a<8){
		alert('Trung bình');
	}else if(a<5){
		alert('Kém');
	}else{
		alert('vui lòng nhập lại');
	}
</script>	
</body>
</html>
